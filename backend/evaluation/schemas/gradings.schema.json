{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Gradings",
  "properties": {
    "name": {
      "type": "string"
    },
    "submissions": {
      "type": "array",
      "items": {
        "type": "object",
        "title": "GradingSubmission",
        "properties": {
          "name": {
            "type": "string"
          },
          "test_suites": {
            "type": "array",
            "items": {
              "type": "object",
              "title": "GradingTestSuite",
              "properties": {
                "name": {
                  "type": "string"
                },
                "test_cases": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "title": "GradingTestCase",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "points": {
                        "type": "integer",
                        "minimum": 0
                      },
                      "comment": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "name",
                      "points",
                      "comment"
                    ]
                  }
                }
              },
              "required": [
                "name",
                "test_cases"
              ]
            }
          }
        },
        "required": [
          "name",
          "test_suites"
        ]
      }
    }
  },
  "required": [
    "name",
    "submissions"
  ]
}